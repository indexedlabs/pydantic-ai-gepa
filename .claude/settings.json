{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write|Bash|Task",
        "hooks": [
          {
            "type": "command",
            "command": "mt hooks --event PreToolUse"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Grep|Glob|Task|Bash|ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "mt hooks --event PostToolUse"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "mt hooks --event SessionStart"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "mt hooks --event PreCompact"
          }
        ]
      }
    ]
  }
}
